<div class="containerPost"> 
    <h1> information post</h1>

    <div style="background-color: brown;color: white">
        
        
        
        <a href="/profile/{{allPostInfo.owner._id}}"><h2>name user:{{allPostInfo.owner.username}}</h2></a>
        



     <div class = "imagePost">   
    <img  src="{{allPostInfo.image}}" alt="sneakers model" width="200px">
    <p>size: {{allPostInfo.size}}</p>
    </div>
    </div>

{{!-- commentario --}}
       <div style="background-color: blue;  color: white">

        
        {{#each allCommentInfo.comments}}
        

           <a href="/profile/{{this.userId}}"><img src="{{this.profilePicture}}" alt=""><h2>{{this.name}}</h2></a> 

            
            <p>comment: {{this.comentario}}</p>
            
        {{/each}}


       </div>
       


       {{#if isUserCanDelete}}
      <form action="/profile/{{allPostInfo._id}}/delete" method="post">
        <button class="deleteBtn">Delete</button>
      </form>
      {{/if}}



    {{!-- edit post btn--}}
    {{#if isUserCanDelete}}
    <button id="editPostButton">Edit</button>
    {{/if}}
    {{!-- edit post form--}}
    <div class="editPostContainer" style="display: none">
        <h1>Edit your Post</h1>

        <form action="/profile/info-user/{{allPostInfo._id}}" method = "post" enctype="multipart/form-data">
      <label for="price">Price</label>
      <input type="number" name="price" value="{{allPostInfo.price}}"/>

      <br />
      <br />

      <label for="size">Size</label>
      <input type="number" name="size" value="{{allPostInfo.size}}"/>

      <br />
      <br />

      <label for="forSale">For sale
        <select name="forSale">
          <option value="For sale">For sale</option>
          <option value="No, i keep it!">No, I keep it!</option>
        </select>

      </label>

      <br />
      <br />

      <label for="image">Image sneaker file</label>
      <input type="file" name="image"/>

      <br />
      <br />

      <label for="color">Color</label>
      <input type="text" name="color" value="{{allPostInfo.color}}"/>

      <br />
      <br />

      <label for="brand">Brand</label>
      <input type="text" name="brand" value="{{allPostInfo.brand}}"/>

      <br />
      <br />

      <label for="model">Model</label>
      <input type="text" name="model" value="{{allPostInfo.model}}"/>

      <br />
      <br />

      <label for="status">
        Status
        <select name="status">
          <option value="used">Used</option>
          <option value="new">New</option>
        </select>
      </label>

      <br />
      <br />

      <label for="description">Description</label>
      <input type="text" name="description" value="{{allPostInfo.description}}"/>

      <br />
      <br />

            <button>Edit post</button>
        </form>


    </div>




    <div >
        <form action="/profile/info-user/{{allPostInfo._id}}" method = "post"> Leave your comment
            <label for="comments" ></label>
            <input type="text" name="comments" placeholder="...">
            <button>Post</button>
        </form>
    </div>


    